function si8_preprocess_page(&$vars) {
  $vars['base_path'] = base_path();

  $accedi_path = \Drupal::service('path.alias_manager')->getPathByAlias('/accedi');
  $link_explode = explode('/', $accedi_path);

  $vars['accedi'] = [
    '#type' => 'link',
    '#url' => Url::fromRoute('entity.node.canonical', array('node' => $link_explode[2])),
    '#title' => t('Login'),
  ];

