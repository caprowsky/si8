  $custom_contents = ['footer1', 'footer2', 'footer3'];
  foreach ($custom_contents as $custom_content) {
    // $vars[$custom_content] = Drupal::service('si8_utils.utils')->getViewWithArgument('custom_content', 'machine_name', $custom_content);

  }

}

